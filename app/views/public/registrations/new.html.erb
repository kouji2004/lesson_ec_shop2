<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前" %><br>
      <%= f.label :"(姓)" %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "山田"%>
      <%= f.label :"(名)" %>
      <%= f.text_field :first_name, placeholder: "太朗" %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %><br>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kata, placeholder: "ヤマダ" %>
      <%= f.label :"(メイ)" %>
      <%= f.text_field :first_name_kata, placeholder: "タロウ" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@wxample.com", style: "width: 40%" %>
  </div>


  <div class="field">
   <%= f.label :"郵便番号(ハイフンなし)" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
   <%= f.label :"住所"%><br>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>


  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %><br>
      <%= f.telephone_field :phone_number, placeholder: "123456789"%>
  </div>



  <div class="field">
    <%= f.label :"パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"再パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
