<h1>注文履歴一覧</h1>
 <% @orders.each do |order| %>
 <p>
  注文日:
  <%= order.created_at.strftime('%Y/%m/%d') %>
  </p>

  <p>
    配送先:
  〒<%= order.post_code %>:
   <%= order.address %>:
   <%= order.address_name %>
  </p>

  <p>
    注文商品:
   <% order.order_details.each do |detail| %>
    <%= detail.item.name %><br>
   <% end %>
  </p>

  <p>
    支払金額:
    <%= order.billing_amount.to_s(:delimited) %>円
  </p>

  <p>
    ステータス:
    <%= order.order_status %>
  </p>

  <p>
    注文詳細:
    <%= link_to "表示する", order_path(order) %>
  </p>
 <%end%>